<Window x:Class="Desafio_WPFAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desafio_WPFAPP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="box1" HorizontalAlignment="Left" Height="22" Margin="37,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="92"/>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.393,-1.973"/>
        <TextBox x:Name="boxnome" HorizontalAlignment="Left" Margin="60,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="730" TextChanged="TextBox_TextChanged_1" />
        <Label Content="Sobrenome:" HorizontalAlignment="Left" Margin="9,93,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.625,-0.47"/>
        <TextBox x:Name="boxsobrenome" HorizontalAlignment="Left" Margin="88,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="702"/>
        <Label Content="Telefone:" HorizontalAlignment="Left" Margin="10,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.625,-0.47"/>
        <TextBox x:Name="boxtelefone" HorizontalAlignment="Left" Margin="83,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="702"/>
        <Button Content="Buscar" HorizontalAlignment="Left" Margin="219,170,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.454,-1.213"/>
        <Button Content="Alterar" HorizontalAlignment="Left" Margin="154,170,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnExcluir" Content="Excluir" HorizontalAlignment="Left" Margin="89,170,0,0" VerticalAlignment="Top" Click="btnExcluir_Click"/>
        <Button x:Name="btnSalvar" Content="Adicionar" HorizontalAlignment="Left" Margin="22,170,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,199,0,0"/>

    </Grid>
</Window>
